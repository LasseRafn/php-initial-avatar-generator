{
	"name": "lasserafn/php-initial-avatar-generator",
	"description": "A package to generate avatars with initials for PHP",
	"keywords": [
		"initials",
		"image",
		"avatar",
		"svg"
	],
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Lasse Rafn",
			"email": "lasserafn@gmail.com"
		}
	],
	"require": {
		"php": "^7.0|^7.1|^7.2|^7.3|^7.4|^8.0",
		"ext-json": "*",
		"intervention/image": "^2.3",
		"lasserafn/php-initials": "^3.0",
		"lasserafn/php-string-script-language": "^0.3.0",
		"meyfa/php-svg": "^0.9.0",
		"overtrue/pinyin": "^4.0"
	},
	"require-dev": {
		"doctrine/instantiator": "1.0.*",
		"phpunit/phpunit": "^6.5",
		"satooshi/php-coveralls": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"LasseRafn\\InitialAvatarGenerator\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"InitialAvatarGenerator\\Tests\\": "tests/"
		}
	},
	"config": {
		"sort-packages": true,
		"platform": {
			"php": "7.0"
		}
	}
}
